<div class="min-vh-100">
  <div class="container flex-grow-1">
    <table class="table table-secondary table-striped table-borderless table-hover", style="border-radius: 10px 10px 0px 0px; border-collapse: collapse; overflow: hidden;">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone Number</th>
          <th scope="col">Address</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
          <% @friends.each do |friend| %>
            <% if friend.user == current_user %>
              <tr class="table-warning">
                <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
                <td><%= friend.email %></td>
                <td><%= friend.phone %></td>
                <td><%= friend.address %></td>
              </tr>
            <% end %>
          <% end %>
      </tbody>
    </table>
  </div>

  <footer class="container">
    <div class="d-flex justify-content-center mt-3">
      <%= link_to 'Add a new friend', new_friend_path, class:"btn btn-secondary" %>
    </div>

    <div class="pagination justify-content-center mt-3">
      <%= will_paginate @friends, renderer: Bootstrap5Renderer %>
    </div>
  </footer>
</div>
