<div class="jumbotron">
  <h1 class="display-4"><%= "#{@friend.first_name} #{@friend.last_name}" %></h1>
  <p class=""><strong>Email: </strong><%= "#{@friend.email}"%></p>
  <p class=""><strong>Phone Number: </strong><%= "#{@friend.phone}"%></p>
  <p class=""><strong>Address: </strong><%= "#{@friend.address}"%></p>
  <hr class="my-4">
  <p class=""><strong>Bio: </strong><%= "TBA..." %></p>
</div>

<div>
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary mt-3" %>
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary mt-3" %>

  <%= button_to "Destroy this friend", @friend, method: :delete, class:"btn btn-danger mt-5" %>
</div>
